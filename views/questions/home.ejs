<%- include("../partials/header.ejs") %>


	<header class = "jumbotron text-center" >
		<div class = "container">
			<h1> Welcome to GaFAQ! </h1>
			<p>View most asked questions from all over the world</p>
			<p>
				<a class = "btn btn-primary btn-lg" href="/home/new"> Click here to ask a Question </a>
			</p>
		</div>
	</header>
<div class = "container">
	<div >
		<% for(var i=0;i<questions.length; i++){ %>	
		<svg width="3em" height="3em" viewBox="0 0 16 16" class="bi bi-person-circle" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
		  <path d="M13.468 12.37C12.758 11.226 11.195 10 8 10s-4.757 1.225-5.468 2.37A6.987 6.987 0 0 0 8 15a6.987 6.987 0 0 0 5.468-2.63z"/>
		  <path fill-rule="evenodd" d="M8 9a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
		  <path fill-rule="evenodd" d="M8 1a7 7 0 1 0 0 14A7 7 0 0 0 8 1zM0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8z"/>
		</svg>
			<div class="px-5 py-3">
				<h3> <b><%= questions[i].question%></b> </h3>
				<p > Answer </p>
				<a href="/home/<%= questions[i]._id%>" class="btn btn-primary"> View Answers </a>
				
			</div>
		<% } %>
	</div>
</div>

<%- include ("../partials/footer.ejs") -%>